{
  "name": "@magpie/shared",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "run-s code-check test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc mocha 'src/**/*.spec.js'",
    "test-code": "mocha --require @babel/register 'src/**/*.spec.js'",
    "gulp:lint": "gulp lint",
    "gulp:build": "gulp build",
    "flow:status": "flow status",
    "flow:deps": "flow-typed install -s",
    "code-check": "run-s gulp:lint flow:status",
    "prettify": "prettier --write 'src/**/*.{js,js.flow}'",
    "format": "run-s prettify 'gulp:lint -- --fix'",
    "build": "run-s flow:status gulp:build",
    "build:prod": "run-s flow:status 'gulp:build -- --production'",
    "build:watch": "yarn gulp:build -- watch",
    "prepublishOnly": "yarn build:prod",
    "prepare": "yarn flow:deps"
  },
  "repository": "https://github.com/AVykhrystyuk/magpie/tree/master/packages/shared",
  "author": "Alexey Vykhrystyuk <AVykhrystyuk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/register": "^7.4.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.3",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "flow-bin": "^0.94.0",
    "flow-typed": "^2.5.1",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-eslint": "^5.0.0",
    "gulp-if": "^2.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "mocha": "^6.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.0"
  },
  "engines": {
    "node": ">=8.15.1"
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "exclude": [
      "src/**/*.spec.js",
      "src/prepared-flow-files/*.js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "@babel/register"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "all": true
  }
}
