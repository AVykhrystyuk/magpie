{
  "name": "magpie-shared",
  "version": "0.0.15",
  "main": "dist/index.js",
  "scripts": {
    "pretest": "yarn build:check",
    "test": "cross-env NODE_ENV=test nyc mocha 'src/**/*.spec.js'",
    "test-only": "mocha --require babel-register 'src/**/*.spec.js'",
    "lint": "yarn eslint 'src/**/*.js'",
    "flow:status": "flow status",
    "prettify": "yarn prettier --write 'src/**/*.js'",
    "format": "yarn run-s prettify 'lint --fix'",
    "build": "yarn run-s build:clear build:check build:babel",
    "build:check": "yarn run-s lint flow:status",
    "build:babel": "babel src/ -d dist/ --ignore 'src/**/*.spec.js'",
    "build:clear": "rimraf dist",
    "prepublishOnly": "yarn build",
    "sendCoverageToCoveralls": "yarn test && cat coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": "https://github.com/AVykhrystyuk/magpie-shared",
  "author": "Alexey Vykhrystyuk <AVykhrystyuk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "0.93.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^11.9.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "sinon": "^4.4.1"
  },
  "engines": {
    "node": ">=8.11.3"
  },
  "files": [
    "dist",
    "flow-types.js"
  ],
  "nyc": {
    "exclude": [
      "src/**/*.spec.js",
      "flow-types.js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "cache": true,
    "all": true
  }
}
