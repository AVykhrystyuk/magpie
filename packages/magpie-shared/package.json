{
  "name": "magpie-shared",
  "version": "0.0.2",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn build && yarn @mocha",
    "cover": "yarn build && yarn @istanbul",
    "lint": "yarn eslint 'src/**'",
    "pretty": "yarn prettier --write 'src/**/*.{js,js.flow}'",
    "format": "yarn pretty && yarn lint --fix",
    "clear": "del dist",
    "build": "yarn clear && yarn lint && yarn @babel",
    "prepublishOnly": "yarn build",
    "coverageToCoveralls": "yarn cover && cat coverage/lcov.info | coveralls && rm -rf ./coverage",
    "@istanbul": "istanbul cover _mocha --report lcovonly -- -R spec 'dist/**/*.spec.js'",
    "@mocha": "mocha 'dist/**/*.spec.js'",
    "@babel": "babel src/ -d dist/"
  },
  "repository": "https://github.com/AVykhrystyuk/magpie-shared",
  "author": "Alexey Vykhrystyuk <AVykhrystyuk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "coveralls": "^3.0.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "^0.65.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.0",
    "prettier": "^1.10.2"
  },
  "engines": {
    "node": ">=8.9.4"
  }
}
