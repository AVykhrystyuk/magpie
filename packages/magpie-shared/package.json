{
  "name": "magpie-shared",
  "version": "0.0.11",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --require babel-register 'src/**/*.spec.js'",
    "cover": "cross-env NODE_ENV=test nyc mocha 'src/**/*.spec.js'",
    "lint": "yarn eslint 'src/**/*.{js,js.flow}'",
    "eslint-prettier-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "prettify": "yarn prettier --write 'src/**/*.{js,js.flow}'",
    "format": "yarn prettify && yarn lint --fix",
    "flow:status": "yarn flow status",
    "build": "yarn run-s build:clear lint flow:status build:babel",
    "build:babel": "babel src/ -d dist/ --ignore '**/*.spec.js'",
    "build:clear": "del dist",
    "prepublishOnly": "yarn build",
    "coverageToCoveralls": "yarn cover && cat coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": "https://github.com/AVykhrystyuk/magpie-shared",
  "author": "Alexey Vykhrystyuk <AVykhrystyuk@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "del-cli": "^1.1.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "flow-bin": "0.80.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.3",
    "nyc": "^11.4.1",
    "prettier": "^1.14.2",
    "sinon": "^4.4.1"
  },
  "engines": {
    "node": ">=8.11.3"
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.spec.js"
    ],
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcovonly",
      "text"
    ],
    "sourceMap": false,
    "instrument": false,
    "all": true
  }
}
